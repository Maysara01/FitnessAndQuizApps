<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/quiz_background">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:background="@null"
        android:elevation="4dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:contentDescription="Back button"
        app:tint="#FFFFFF" />

    <!-- Image Placeholder -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon"
        android:contentDescription="Insert image here" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media Player Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMediaPlayer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Media Player"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#7C4DFF"
            android:textColor="#FFFFFF" />

        <!-- Calculator Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculator"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Calculator"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#5C35CC"
            android:textColor="#FFFFFF" />

        <!-- Camera Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Camera"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9F7CFF"
            android:textColor="#FFFFFF" />

        <!-- Quizz Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuizz"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="QUIZZ"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:backgroundTint="#457B9D"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>